    "vuetify-loader": "^1.3.0",
    "webpack": "^4.46.0"
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset",
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "src"
          ]
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "gitHooks": {
    "babel": {
      "pre-commit": "lint-staged"
    }
  }
