{
  "name": "elemental-chat-ui",
  "version": "0.0.1-alpha29",
  "private": true,
  "scripts": {
    "build": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holo-host' VUE_APP_CHAPERONE_SERVER_URL='https://chaperone.holo.host/' vue-cli-service build",
    "build-holo-host": "yarn run build",
    "build-self-hosted": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='self-hosted' vue-cli-service build",
    "build-holochain": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holochain' vue-cli-service build",
    "serve": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holo-host' VUE_APP_CHAPERONE_SERVER_URL='http://localhost:8000/' vue-cli-service serve",
    "serve-dev-agent-1": "VUE_APP_WEB_CLIENT_PORT=8888 yarn serve-develop",
    "serve-dev-agent-2": "VUE_APP_WEB_CLIENT_PORT=9999 yarn serve-develop",
    "serve-develop": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holochain' vue-cli-service serve",
    "test-unit": "vue-cli-service test-unit",
    "test-integration-hc": "nix-shell --command 'VUE_APP_CONTEXT='holochain' VUE_APP_WEB_LOGS='true' VUE_APP_TEST_PORT='8888' node scripts/test.js --config=./jest.hcintegration.config.js --watch --runInBand --detectOpenHandles --testTimeout=95000000' && exit",
    "test-integration-holo": "nix-shell --command 'VUE_APP_CONTEXT='holo-host' VUE_APP_WEB_LOGS='true' VUE_APP_CHAPERONE_SERVER_URL='https://chaperone.holo.host/' node scripts/test.js --config=./jest.holointegration.config.js --watch --runInBand --detectOpenHandles --testTimeout=95000000' && exit",
    "test-holochain-env": "yarn run build-holochain && yarn run test-integration-hc",
    "test-holo-host-env": "yarn run build-holo-host && yarn run test-integration-holo",
    "test-e2e": "vue-cli-service test-e2e",
    "fetch-dna": "mkdir -p dnas && sh ./scripts/fetch-dna.sh",
    "run-dna": "holochain-run-dna -c ./tests/integration/setup/config.yml -a 4444",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@babel/preset-env": "^7.13.8",
    "@holo-host/web-sdk": "Holo-Host/web-sdk#6d3fa2999042a0fa9ec7532650e91d5f05063239",
    "@holochain-open-dev/holochain-run-dna": "^0.3.2",
    "@holochain/conductor-api": "0.0.1-dev.14",
    "@testing-library/jest-dom": "^5.11.9",
    "async-wait-until": "^1.2.6",
    "babel-plugin-module-resolver": "^4.1.0",
    "core-js": "^3.6.5",
    "dexie": "^3.0.2",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "localforage": "^1.9.0",
    "localforage-getitems": "^1.4.2",
    "regenerator-runtime": "^0.13.7",
    "register-service-worker": "^1.7.1",
    "tape": "^5.2.0",
    "uuid": "^8.3.1",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vue-test-utils": "^1.0.0-beta.11",
    "vuetify": "^2.2.11",
    "vuex": "^3.4.0",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@holochain/tryorama": "file:/home/lisa/Documents/gitrepos/holochain/holochain-new/tryorama/tryorama",
    "@testing-library/vue": "^5.6.1",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "^4.5.11",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chai": "^4.1.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "puppeteer": "^8.0.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "ts-jest": "^26.5.2",
    "vue-cli-plugin-vuetify": "~2.0.7",
