{
  "name": "elemental-chat-ui",
  "version": "0.0.1-alpha29",
  "private": true,
  "scripts": {
    "build:holo-host": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holo-host' VUE_APP_CHAPERONE_SERVER_URL='https://chaperone.holo.host/' vue-cli-service build",
    "build:self-hosted": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='self-hosted' vue-cli-service build",
    "build:holochain": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holochain' vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "test:integration-hc": "nix-shell --command 'VUE_APP_CONTEXT='holochain' VUE_APP_WEB_LOGS='true' VUE_APP_TEST_PORT='8888' node scripts/test.js --config=./jest.hcintegration.config.js --watch --runInBand --detectOpenHandles --testTimeout=95000000' && exit",
    "test:integration-holo": "VUE_APP_CONTEXT='holo-host' VUE_APP_WEB_LOGS='true' VUE_APP_CHAPERONE_SERVER_URL='https://chaperone.holo.host/' node scripts/test.js --config=./jest.holointegration.config.js --watch --runInBand --detectOpenHandles --testTimeout=95000000",
    "test:holochain-ci": "yarn fetch-dna && yarn build:holochain && CI=1 yarn test:integration-hc",
    "test:holo-host-ci": "yarn build:holo-host && yarn CI=1 test:integration-holo",
    "test:holochain-env": "yarn fetch:dna && yarn build:holochain && yarn test:integration-hc",
    "test:holo-host-env": "yarn build:holo-host && yarn test:integration-holo",
    "serve:holo": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holo-host' VUE_APP_CHAPERONE_SERVER_URL='http://localhost:24273/' vue-cli-service serve",
    "serve:develop": "VUE_APP_UI_VERSION=$npm_package_version VUE_APP_CONTEXT='holochain' vue-cli-service serve",
    "serve:dev-agent-1": "VUE_APP_WEB_CLIENT_PORT=8888 yarn serve:develop",
    "serve:dev-agent-2": "VUE_APP_WEB_CLIENT_PORT=9999 yarn serve:develop",
    "fetch:dna": "mkdir -p dnas && sh ./scripts/fetch-dna.sh",
    "run:chaperone": "yarn chaperone-server --config ./chaperone.json",
    "run:dna": "holochain-run-dna -c ./hc-self-hosted-config.yml -a 4444",
    "hc-holo:agent-1": "holochain-run-dna -c ./holo-hosted-config.yml -a 1221 -u kitsune-proxy://CIW6PxKxsPPlcuvUCbMcKwUpaMSmB7kLD8xyyj4mqcw/kitsune-quic/h/165.22.32.11/p/5778/--",
    "hc:agent-1": "holochain-run-dna -p 8888 -i elemental-chat-1 -u kitsune-proxy://CIW6PxKxsPPlcuvUCbMcKwUpaMSmB7kLD8xyyj4mqcw/kitsune-quic/h/165.22.32.11/p/5778/-- ./dnas/elemental-chat.dna.gz",
    "hc:agent-2": "holochain-run-dna -p 9999 -i elemental-chat-2 -u kitsune-proxy://CIW6PxKxsPPlcuvUCbMcKwUpaMSmB7kLD8xyyj4mqcw/kitsune-quic/h/165.22.32.11/p/5778/-- ./dnas/elemental-chat.dna.gz",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@babel/preset-env": "^7.13.8",
    "@holo-host/web-sdk": "^0.4.0",
    "@holochain-open-dev/holochain-run-dna": "^0.3.2",
    "@holochain/conductor-api": "holochain/holochain-conductor-api#abf192f25a34229ad28fa97ddfec3360ff551b4a",
    "@testing-library/jest-dom": "^5.11.9",
    "@whi/stdlog": "^0.3.4",
    "async-wait-until": "^1.2.6",
    "babel-plugin-module-resolver": "^4.1.0",
    "core-js": "^3.6.5",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "localforage": "^1.9.0",
    "localforage-getitems": "^1.4.2",
    "regenerator-runtime": "^0.13.7",
    "register-service-worker": "^1.7.1",
    "tape": "^5.2.0",
    "uuid": "^8.3.1",
    "vue": "^2.6.11",
    "vue-jest": "^3.0.7",
    "vue-router": "^3.2.0",
    "vue-test-utils": "^1.0.0-beta.11",
    "vuetify": "^2.2.11",
    "vuex": "^3.4.0",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@holo-host/chaperone": "^2.0.0",
    "@holochain/tryorama": "holochain/tryorama#3b84f41aaa6a4059b4c49fe00dbe7aef02a77d1f",
    "@testing-library/vue": "^5.6.1",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "^4.5.11",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chai": "^4.1.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "puppeteer": "^8.0.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "standard": "^16.0.3",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0",
    "webpack": "^4.46.0"
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset",
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "src"
          ]
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "gitHooks": {
    "babel": {
      "pre-commit": "lint-staged"
    }
  }
}
